# .gitignore for Django

# Ignore database files
*.sqlite3
*.db

# Ignore compiled Python files
__pycache__/
*.pyc

# Ignore local development settings
.env

# Ignore media files (uploads)
media/

# Ignore static files (collectstatic)
static/

# Ignore virtual environment
env/

# Ignore logs and other generated files
*.log
*.pot
*.pyo
*.swp

# Ignore secret key
*.secret

# Ignore coverage reports
htmlcov/

# Ignore IDE and editor-specific files
.vscode/
.idea/

# Ignore configuration files for local development
*.yml
*.yaml
